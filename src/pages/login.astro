---
import Layout from '../layouts/Layout.astro';
import Page from '../components/Page.astro';
import LoginForm from '../components/LoginForm.svelte';

// Prüfen, ob eine Verifikation erfolgreich war
const verified = Astro.url.searchParams.get('verified') === 'true';
---

<Layout title="Login">
  <Page>
    <div class="max-w-md mx-auto">
      {verified && (
        <div class="mb-6 border-1 border-lime-600 dark:border-lime-300 bg-lime-600/20 dark:bg-lime-300/20 text-lime-600 dark:text-lime-300 p-3 rounded-md text-sm">
          Deine E-Mail wurde erfolgreich bestätigt. Du kannst dich jetzt einloggen.
        </div>
      )}
      <LoginForm client:load />
    </div>
  </Page>
</Layout>