---
import Layout from '../layouts/Layout.astro';
import Page from '../components/Page.astro';
import Button from '../components/Button.svelte';

// URL-Parameter auslesen
const error = Astro.url.searchParams.get('error') || 'Unbekannter Fehler bei der Verifikation';
---

<Layout title="Verifikation fehlgeschlagen">
  <Page>
    <div class="flex flex-col items-center justify-center min-h-[60vh] max-w-md mx-auto text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-orange-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      
      <h1 class="text-2xl font-bold mb-2">Verifikation fehlgeschlagen</h1>
      <p class="text-neutral-600 dark:text-neutral-400 mb-6">{error}</p>
      
      <div class="flex flex-col gap-4 w-full">
        <Button client:load 
          label="Neuen Verifikationslink anfordern" 
          type="primary" 
          interaction={{ type: 'link', target: '/resend-verification' }} 
        />
        
        <Button client:load 
          label="ZurÃ¼ck zur Startseite" 
          type="secondary" 
          interaction={{ type: 'link', target: '/' }} 
        />
      </div>
    </div>
  </Page>
</Layout>