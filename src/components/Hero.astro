---

interface props {
  title: string;
  copy?: string;
}

const { title, copy } = Astro.props;

---

<div class="size-full bg-amber-300 py-16 flex flex-col gap-8">
    <h1 class="w-9/10 max-w-6xl mx-auto text-6xl text-stone-950 font-barlow uppercase font-bold">{title}</h1>
    {copy && <p class="w-9/10 max-w-6xl mx-auto text-stone-950">{copy}</p>}
</div>