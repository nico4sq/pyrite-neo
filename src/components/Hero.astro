---

interface props {
  title: string;
  copy?: string;
}

const { title, copy } = Astro.props;

---

<div class="hero-bg-animation size-full -mt-8 py-24 flex flex-col gap-8">
    <h1 class="text-6xl text-slate-950 font-barlow uppercase font-bold">{title}</h1>
    {copy && <p class="text-slate-950">{copy}</p>}
</div>