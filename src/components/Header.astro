---
import logo from "../assets/pyrite-logo.svg";
import Button from "./Button.svelte";
import Modal from "./Modal.svelte";
import UserMenuButton from "./UserMenuButton.svelte";

import '../styles/components/Header.css';

import { SITENAME } from "../functions/theme";
---

<header
    class="pyrite-header"
>
    <div class="inner">
        <a href="/" class="branding">
            <img
                src={logo.src}
                alt="Pyrite logo"
            />
            <p>{SITENAME}</p>
        </a>

        <div class="interactions">
            <!-- Login/Benutzer-Bereich -->
            <UserMenuButton client:load />

            <!-- Menü-Button -->
            <Button
                label="Menü"
                interaction={{ type: "modal", target: "main-menu" }}
                icon={{ name: "MenuIcon", only: true }}
                client:load
            />
        </div>
    </div>
</header>

<Modal id="main-menu" title="Menü" position="right" client:load>
    <nav class="layout-list">
      <div class="menu-group">
        <p>Tools</p>
        <ul>
            <li>
                <a href="/eventfinder" class="is-heading-level-4">Eventfinder</a>
            </li>
            <li>
                <a href="/locationfinder" class="is-heading-level-4">Locationfinder</a>
            </li>
        </ul>
    </div>

    <div class="menu-group">
        <p>Archiv</p>
            <ul>
                <li>
                    <a href="/events" class="is-heading-level-5">Events</a>
                </li>
                <li>
                    <a href="/artists" class="is-heading-level-5">Artists</a>
                </li>
                <li>
                    <a href="/locations" class="is-heading-level-5">Locations</a>
                </li>
            </ul>
        </div>
    </nav>
</Modal>
